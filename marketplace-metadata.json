{
  "id": "claimification",
  "name": "Claimification",
  "version": "2.1.0",
  "description": "Extract and verify factual claims from any text",
  "longDescription": "Claimification implements a sophisticated 4-stage pipeline based on research from Microsoft Research. It breaks down text into atomic, verifiable factual statements that can be independently fact-checked. The pipeline includes sentence splitting, verifiable content detection, ambiguity resolution, and atomic claim extraction.",
  "author": {
    "name": "Marlo Horndasch",
    "email": "private",
    "url": "https://github.com/mhornd"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mhornd/claimification",
    "branch": "master"
  },
  "homepage": "https://github.com/mhornd/claimification#readme",
  "documentation": "https://github.com/mhornd/claimification/tree/main/docs",
  "license": "MIT",
  "category": "development-tools",
  "tags": [
    "fact-checking",
    "claim-extraction",
    "verification",
    "llm",
    "langchain",
    "ai-safety",
    "enterprise"
  ],
  "keywords": [
    "fact-checking",
    "claim extraction",
    "verification",
    "LLM safety",
    "groundedness detection",
    "factual claims",
    "AI safety"
  ],
  "features": [
    "4-stage claim extraction pipeline",
    "LangChain with structured output",
    "Multi-model support (OpenAI & Anthropic)",
    "Type-safe Pydantic models",
    "MCP Server for seamless Claude Code integration",
    "Python API and CLI interface",
    "STDIO-based MCP transport (no network setup)"
  ],
  "useCases": [
    "AI Safety & Verification",
    "Fact-checking LLM outputs",
    "Research & Analysis",
    "Enterprise Compliance",
    "Groundedness detection integration"
  ],
  "requires": {
    "python": ">=3.10",
    "claude-code": ">=1.0.0"
  },
  "dependencies": {
    "langchain": ">=0.1.0",
    "langchain-openai": ">=0.0.5",
    "langchain-anthropic": ">=0.1.0",
    "pydantic": ">=2.0.0",
    "python-dotenv": ">=1.0.0",
    "rich": ">=13.0.0",
    "mcp": ">=1.0.0"
  },
  "mcpServers": {
    "claim-extraction": {
      "command": "claimification-claim-extraction",
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    },
    "entity-mapping": {
      "command": "claimification-entity-mapping",
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    }
  },
  "installation": {
    "command": "pip install .",
    "env_required": ["OPENAI_API_KEY"],
    "env_note": "An OPENAI_API_KEY is required"
  },
  "screenshots": [],
  "featured": true,
  "verified": true,
  "lastUpdated": "2026-01-27",
  "compatibility": {
    "platforms": ["macOS", "Linux", "Windows"],
    "pythonVersions": ["3.10", "3.11", "3.12"]
  },
  "support": {
    "email": "private"
  },
  "research": {
    "paperTitle": "Towards Effective Extraction and Evaluation of Factual Claims",
    "paperAuthors": "Metropolitansky & Larson (2025)",
    "methodology": "4-stage pipeline: Sentence Splitting, Selection, Disambiguation, Decomposition"
  },
  "quality": {
    "accuracy": "99% of claims are entailed by source sentence",
    "completeness": "Best balance between verifiable/unverifiable content",
    "context": "Least likely to omit critical context"
  }
}
