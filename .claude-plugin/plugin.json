{
  "name": "claimification",
  "version": "1.1.0",
  "description": "Extract and verify factual claims from any text",
  "author": {
    "name": "Marlo Horndasch",
    "email": "private",
    "url": "https://github.com/mhornd"
  },
  "license": "MIT",
  "repository": "https://github.com/mhornd/claimification",
  "homepage": "https://github.com/mhornd/claimification#readme",
  "keywords": [
    "fact-checking",
    "claim-extraction",
    "verification",
    "llm",
    "langchain",
    "ai-safety"
  ],
  "mcpServers": {
    "claimification": {
      "command": "python",
      "args": ["mcp_server.py"],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
      }
    }
  }
}
